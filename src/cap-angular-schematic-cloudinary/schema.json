{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsCloudinary",
  "title": "CAP Cloudinary Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "description": "Angular version",
      "x-prompt": {
        "message": "Which angular version do you have installed? ",
        "type": "list",
        "items": [
          {
            "value": 2,
            "label": "Angular 2"
          },
          {
            "value": 4,
            "label": "Angular 4"
          },
          {
            "value": 5,
            "label": "Between Angular [5-9]"
          }
        ]
      },
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "cloudName": {
      "type": "string",
      "description": "Cloud name",
      "x-prompt": "Cloudinary cloud name: ",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "uploadPreset": {
      "type": "string",
      "description": "Upload preset: ",
      "x-prompt": "Cloudinary upload preset: ",
      "$default": {
        "$source": "argv",
        "index": 2
      }
    },
    "privateCdn": {
      "type": "string",
      "description": "Private cdn",
      "x-prompt": "Cloudinary private cdn: ",
      "$default": {
        "$source": "argv",
        "index": 3
      }
    },
    "cName": {
      "type": "string",
      "description": "cname:",
      "x-prompt": "Cloudinary cname: ",
      "$default": {
        "$source": "argv",
        "index": 4
      }
    }
  },
  "required": [
    "version",
    "cloudName",
    "uploadPreset",
    "privateCdn",
    "cName"
  ]
}